# ==============================================================================
# Requiem Local Development Environment
# ==============================================================================
# This file provides the default environment for local development.
# Copy this file to .env to activate the settings.
# The default values are configured to work with the docker-compose.yml file.

# ─── Database ─────────────────────────────────────────────────────────────────
# These URLs point to the local PostgreSQL container started by docker-compose.
# The prisma/schema.prisma file uses these variables.
DATABASE_URL="postgresql://requiem_user:requiem_password@localhost:5432/requiem_db"
DIRECT_DATABASE_URL="postgresql://requiem_user:requiem_password@localhost:5432/requiem_db"


# ─── Requiem Engine & Auth ────────────────────────────────────────────────────
# Secret key for signing JWTs.
JWT_SECRET_KEY="insecure_development_key_replace_for_production"
JWT_ALGORITHM="HS256" # Use a symmetric algorithm for local dev simplicity


# ─── Feature Flags ────────────────────────────────────────────────────────────
# Sensible defaults for local development.
REQUIEM_ENGINE_DUAL_RATE=0.0
REQUIEM_DEFAULT_ENGINE=requiem
REQUIEM_AUDIT_BACKEND=database
REQUIEM_PROMPT_FILTER=disabled
REQUIEM_COST_SINK=disabled


# ─── Monitoring ───────────────────────────────────────────────────────────────
# Disabled by default for local development to reduce noise.
PROMETHEUS_ENABLED=false
DATADOG_API_KEY=""


# ─── Optional: Supabase Integration ───────────────────────────────────────────
# These are NOT required for the core Requiem quickstart.
# Fill these in only if you are working on features that use Supabase.
SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

NEXT_PUBLIC_APP_URL="http://localhost:3000"
