{
  "name": "requiem",
  "version": "1.3.0",
  "description": "Deterministic native runtime with UI kit for operational interfaces",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build -j",
    "build:ui": "cd packages/ui && npm run build",
    "test": "ctest --test-dir build --output-on-failure",
    "test:ui": "cd packages/ui && npm run typecheck",
    "verify": "npm run verify:cpp && npm run verify:ui && npm run verify:determinism",
    "verify:cpp": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build -j && ctest --test-dir build --output-on-failure",
    "verify:ui": "cd packages/ui && npm run verify",
    "verify:determinism": "pwsh scripts/verify_determinism.ps1",
    "verify:boundaries": "node scripts/verify-ui-boundaries.mjs",
    "lint": "cd packages/ui && npm run lint",
    "typecheck": "cd packages/ui && npm run typecheck",
    "format": "cd packages/ui && npx prettier --write .",
    "format:check": "cd packages/ui && npx prettier --check ."
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reachhq/requiem.git"
  },
  "license": "MIT",
  "keywords": [
    "deterministic",
    "runtime",
    "sandbox",
    "ui",
    "design-system"
  ]
}
