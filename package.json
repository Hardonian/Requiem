{
  "name": "requiem",
  "version": "1.0.0",
  "description": "Provable AI Runtime â€” deterministic execution, enforced governance, replayable outcomes",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "reach": "pnpm --filter @requiem/cli",
    "reality-gate": "bash scripts/reality-gate.sh",
    "build": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build -j",
    "build:ui": "pnpm --filter @requiem/ui build",
    "build:web": "pnpm --filter ready-layer build",
    "build:ai": "pnpm --filter @requiem/ai build",
    "test": "node -e \"const fs=require('fs'); if(!fs.existsSync('build')){console.error('ERROR: build/ not found. Run: pnpm run build:cpp'); process.exit(1);}\" && ctest --test-dir build --output-on-failure",
    "build:cpp": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build -j",
    "test:ui": "pnpm --filter @requiem/ui typecheck",
    "lint": "pnpm --filter ready-layer lint",
    "verify:lint": "pnpm --filter ready-layer lint",
    "typecheck": "npx tsc --project ready-layer/tsconfig.json --noEmit",
    "format": "cd ready-layer && npx prettier --write .",
    "format:check": "cd ready-layer && npx prettier --check .",
    "web:dev": "pnpm --filter ready-layer dev",
    "test:e2e": "pnpm --filter ready-layer test:e2e",
    "doctor": "bash scripts/doctor.sh",
    "verify:full": "npm-run-all lint typecheck verify:boundaries build:web",
    "verify:perf-maint": "tsx scripts/verify-perf-maintainability.ts",
    "verify:no-console": "tsx scripts/verify-no-console.ts packages/cli/src",
    "verify": "npm-run-all --parallel lint typecheck verify:boundaries",
    "verify:ci": "npm-run-all verify verify:cpp verify:ai verify:routes verify:contracts verify:ratchet verify:entropy",
    "verify:entropy": "npx tsx scripts/final-enforcement.ts",
    "verify:deps-graph": "npx tsx scripts/verify-dependency-graph.ts",
    "verify:sbom": "npx tsx scripts/generate-sbom.ts",
    "sitemap:generate": "npx tsx ready-layer/src/lib/sitemap.ts",
    "verify:contracts": "npx tsx scripts/verify-cli-contract.ts && npx tsx scripts/verify-routes.ts",
    "verify:ratchet": "npx tsx scripts/ci-ratchet.ts",
    "verify:ratchet-gates": "npx tsx scripts/ci-ratchet-gates.ts",
    "verify:ratchet-gates:update": "npx tsx scripts/ci-ratchet-gates.ts --update-baselines",
    "verify:dead-code": "npx tsx scripts/dead-code-elimination.ts",
    "verify:final": "npx tsx scripts/final-enforcement.ts",
    "measure:baseline": "npx tsx scripts/measure-baseline.ts",
    "verify:cpp": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build -j && ctest --test-dir build --output-on-failure",
    "verify:boundaries": "node scripts/verify-ui-boundaries.mjs",
    "verify:dependencies": "npx tsx scripts/verify-dependency-graph.ts",
    "verify:routes": "npx tsx scripts/verify-routes.ts",
    "verify:determinism": "npx tsx scripts/verify_determinism.ts",
    "stress:determinism": "npx tsx scripts/stress_test_determinism.ts",
    "verify:mcp": "./node_modules/.bin/tsx scripts/verify-mcp.ts",
    "verify:ai-safety": "./node_modules/.bin/tsx scripts/verify-ai-safety.ts",
    "verify:agent-quality": "./node_modules/.bin/tsx scripts/verify-agent-quality.ts",
    "verify:cost-accounting": "./node_modules/.bin/tsx scripts/verify-cost-accounting.ts",
    "verify:tenant-isolation": "./node_modules/.bin/tsx scripts/verify-tenant-isolation.ts",
    "verify:ai": "npm-run-all --parallel verify:mcp verify:ai-safety verify:agent-quality verify:cost-accounting verify:tenant-isolation",
    "verify:skills": "node scripts/verify-skills.mjs",
    "verify:schemas": "node scripts/verify-schemas.mjs",
    "verify:economics": "node scripts/verify-economics.mjs",
    "verify:governance": "npm-run-all verify:skills verify:schemas verify:economics",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "generate:sbom": "tsx scripts/generate-sbom.ts",
    "verify:supplychain": "tsx scripts/verify-supplychain.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "next": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reachhq/requiem.git"
  },
  "license": "MIT",
  "keywords": [
    "deterministic",
    "runtime",
    "sandbox",
    "ui",
    "design-system"
  ]
}
