{
  "name": "requiem",
  "version": "1.3.0",
  "description": "Deterministic native runtime with UI kit for operational interfaces",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build -j",
    "build:ui": "cd packages/ui && npm run build",
    "build:web": "cd ready-layer && npm run build",
    "test": "ctest --test-dir build --output-on-failure",
    "test:ui": "cd packages/ui && npm run typecheck",
    "verify": "npm run verify:cpp && npm run verify:ui && npm run verify:determinism",
    "verify:full": "npm run verify:lint && npm run verify:typecheck && npm run verify:boundaries && npm run verify:routes && npm run build:web",
    "verify:preflight": "npm run verify:lint && npm run verify:typecheck && npm run verify:boundaries && npm run build:web && echo 'âœ… Preflight passed'",
    "verify:cpp": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build -j && ctest --test-dir build --output-on-failure",
    "verify:ui": "cd packages/ui && npm run verify",
    "verify:lint": "cd ready-layer && npm run lint",
    "verify:typecheck": "./node_modules/.bin/tsc --project ready-layer/tsconfig.json --noEmit",
    "verify:routes": "./node_modules/.bin/tsx scripts/verify-routes.ts",
    "verify:determinism": "pwsh scripts/verify_determinism.ps1",
    "verify:boundaries": "node scripts/verify-ui-boundaries.mjs",
    "lint": "cd ready-layer && npm run lint",
    "typecheck": "./node_modules/.bin/tsc --project ready-layer/tsconfig.json --noEmit",
    "format": "cd ready-layer && npx prettier --write .",
    "format:check": "cd ready-layer && npx prettier --check .",
    "web:dev": "cd ready-layer && npm run dev",
    "web:build": "cd ready-layer && npm run build",
    "start:mcp": "cd ready-layer && npm run dev",
    "verify:mcp": "./node_modules/.bin/tsx scripts/verify-mcp.ts",
    "verify:ai-safety": "./node_modules/.bin/tsx scripts/verify-ai-safety.ts",
    "verify:agent-quality": "./node_modules/.bin/tsx scripts/verify-agent-quality.ts",
    "verify:cost-accounting": "./node_modules/.bin/tsx scripts/verify-cost-accounting.ts",
    "verify:tenant-isolation": "./node_modules/.bin/tsx scripts/verify-tenant-isolation.ts",
    "verify:ai": "npm run verify:mcp && npm run verify:ai-safety && npm run verify:agent-quality && npm run verify:cost-accounting && npm run verify:tenant-isolation",
    "typecheck:ai": "cd packages/ai && npm run typecheck",
    "build:ai": "cd packages/ai && npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "next": "^16.1.5",
    "prettier": "^3.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reachhq/requiem.git"
  },
  "license": "MIT",
  "keywords": [
    "deterministic",
    "runtime",
    "sandbox",
    "ui",
    "design-system"
  ]
}
