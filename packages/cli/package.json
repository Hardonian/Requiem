{
  "name": "@requiem/cli",
  "version": "0.1.0",
  "description": "Requiem CLI - Orchestration layer for the Reach ecosystem",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "requiem": "./dist/cli/src/cli.js",
    "reach": "./dist/cli/src/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./commands/decide": {
      "types": "./dist/commands/decide.d.ts",
      "import": "./dist/commands/decide.js"
    },
    "./commands/junctions": {
      "types": "./dist/commands/junctions.d.ts",
      "import": "./dist/commands/junctions.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run make-executable",
    "make-executable": "node -e \"const fs=require('fs'); fs.chmodSync('dist/cli/src/cli.js', 0o755)\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "verify": "npm run typecheck && npm run lint && npm run build",
    "verify:no-console": "tsx ../../scripts/verify-no-console.ts src",
    "verify:perf-maint": "tsx ../../scripts/verify-perf-maintainability.ts",
    "verify:full": "npm run verify && npm run verify:no-console && npm run verify:perf-maint"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "blake3": "^2.1.7",
    "cbor": "^10.0.3",
    "commander": "^12.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "eslint": "^8.0.0",
    "globals": "^14.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^7.0.0"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reachhq/requiem.git",
    "directory": "packages/cli"
  },
  "keywords": [
    "cli",
    "orchestration",
    "decision-engine",
    "junctions",
    "reach"
  ]
}
